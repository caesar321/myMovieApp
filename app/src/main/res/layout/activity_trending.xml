<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5a5a5a"
    tools:context=".TrendingActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:padding="7dp"
                android:text="TRENDING"
                android:typeface="monospace"
                android:textSize="27sp"
                android:textColor="@color/white"
                android:id="@+id/moviess"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/moviess"
                app:iconifiedByDefault="false"
                app:queryHint="Search Movie here"
                android:background="@drawable/searchview"
                android:padding="5dp"
                android:id="@+id/searchViewTred"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchViewTred"
                android:layout_marginTop="12dp"
                android:text="Trending"
                android:layout_marginStart="5dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:typeface="serif"
                android:id="@+id/treding"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/treding"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:padding="6dp"
                android:orientation="horizontal"
                android:id="@+id/recyclerViewTred"/>

        </RelativeLayout>

</RelativeLayout>