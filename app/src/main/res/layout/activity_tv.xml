<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TvActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#5a5a5a">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:padding="7dp"
                    android:text="TV SHOWS"
                    android:typeface="monospace"
                    android:textSize="27sp"
                    android:textColor="@color/white"
                    android:id="@+id/movies"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movies"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search Movie here"
                    android:background="@drawable/searchview"
                    android:padding="5dp"
                    android:id="@+id/searchViewTv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/searchViewTv"
                    android:layout_marginTop="12dp"
                    android:text="Popular"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:typeface="serif"
                    android:id="@+id/popular"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/popular"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:id="@+id/recyclerViewTv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recyclerViewTv"
                    android:layout_marginTop="12dp"
                    android:text="Latest"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:typeface="serif"
                    android:id="@+id/latest"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/latest"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:id="@+id/recyclerViewTv2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recyclerViewTv2"
                    android:layout_marginTop="12dp"
                    android:text="ON AIR"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:typeface="serif"
                    android:id="@+id/onAir"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/onAir"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:id="@+id/recyclerViewTv4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recyclerViewTv4"
                    android:layout_marginTop="12dp"
                    android:text="Top Rated"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:typeface="serif"
                    android:id="@+id/TopRated"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TopRated"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:padding="6dp"
                    android:id="@+id/recyclerViewTv3"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>